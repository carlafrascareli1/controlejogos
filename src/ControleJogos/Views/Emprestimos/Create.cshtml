@model ControleJogos.Model.Emprestimo
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Create</h2>
<h4>Novo empréstimo de jogos</h4>
<hr />

<form asp-action="Create">
    <div class="form-group">
        <label class="control-label">Jogos emprestados</label>
        <div class="col-md-12">

            @foreach (var item in ViewBag.Jogos)
            {
                <input type="checkbox"
                       name="selectedJogos"
                       value="@item.Value" /> @item.Text
                    <br />
            }
        </div>
    </div>
    <br />
    <br />
    <div class="row">
        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DataEmprestimo" class="control-label"></label>
                <input asp-for="DataEmprestimo" class="form-control" />
                <span asp-validation-for="DataEmprestimo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataDevolucaoPrevista" class="control-label"></label>
                <input asp-for="DataDevolucaoPrevista" class="form-control" />
                <span asp-validation-for="DataDevolucaoPrevista" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AmigoID" class="control-label"></label>
                <select asp-for="AmigoID" class="form-control" asp-items="ViewBag.Amigo"></select>
            </div>
        </div>
    </div>
    

    <div class="row">
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar empréstimo" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>


<div>
    <a asp-action="Index">Voltar</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
